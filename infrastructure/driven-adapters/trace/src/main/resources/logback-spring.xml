<configuration>
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <property name="max.retention.days" value="15" />
    <property name="max.file.size" value="10MB" />
    <property name="log.pattern" value="%date [%-5level] [%thread] [%logger] [%file:%line] - %msg%n"/>

    <appender name="TRACE_DOJO" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>LOGS/DOJO.log</file>
        <encoder>
            <charset>utf-8</charset>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} %magenta([%thread]) %highlight(%-5level) %logger{36}.%M - %msg%n</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>LOGS/history/DOJO-%d{yyyy-MM-dd}-%i.log</fileNamePattern>
            <maxHistory>${max.retention.days}</maxHistory>
            <cleanHistoryOnStart>true</cleanHistoryOnStart>
            <timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                <maxFileSize>${max.file.size}</maxFileSize>
            </timeBasedFileNamingAndTriggeringPolicy>
        </rollingPolicy>
    </appender>
    <logger name="co.com.nequi.trace" additivity="true" level="info">
        <appender-ref ref="TRACE_DOJO" />
    </logger>
</configuration>